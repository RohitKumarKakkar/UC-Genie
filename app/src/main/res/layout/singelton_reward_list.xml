<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="270dp"
    android:weightSum="1">


    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="1"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:id="@+id/product_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="10dp"
                android:elevation="10dp"
                app:cardCornerRadius="50dp">

                <ImageView
                    android:id="@+id/rewardImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:src="@drawable/ic_uc" />

            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/rewardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@drawable/rectengle_light"
                android:gravity="center_horizontal"
                android:maxLines="2"
                android:padding="10dp"
                android:textColor="@color/lightblue"
                android:textSize="15sp"
                tools:text="PUBG Mobile UC (Global)" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_c_geniecoin" />

                <TextView
                    android:id="@+id/requiredCoins"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="2dp"
                    android:gravity="center"
                    android:textColor="#FFB104"
                    android:textSize="17sp"
                    tools:text="600 GP = 60 UC" />

            </LinearLayout>

            <TextView
                android:id="@+id/redeemBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rectengle_filled_blue"
                android:gravity="center"
                android:padding="10dp"
                android:text="Redeem Reward"
                android:textColor="@color/colorWhite"
                android:textSize="14sp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>